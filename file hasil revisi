/* ============================================
   DYNAMIC CREATIVE - CSS STYLES
   Professional Videography & Digital Marketing
   ============================================ */

/* CSS Variables */
:root {
    --primary-bg: #0d0c1d;
    --card-bg: rgba(255, 255, 255, 0.05);
    --accent-bg: rgba(255, 255, 255, 0.08);
    --primary-text: #ffffff;
    --secondary-text: #a1a1aa;
    --muted-text: #71717a;
    --accent-color: #7A66CC;
    --accent-secondary: #9580FF;
    --accent-pink: #ec4899;
    --gradient-primary: linear-gradient(135deg, #7A66CC 0%, #9580FF 50%, #ec4899 100%);
    --gradient-card: linear-gradient(135deg, rgba(122, 102, 204, 0.15), rgba(122, 102, 204, 0.05));
    --shadow-primary: 0 20px 60px rgba(122, 102, 204, 0.3);
    --shadow-card: 0 8px 32px rgba(0, 0, 0, 0.3);
    --border-color: rgba(122, 102, 204, 0.3);
    --glass-bg: rgba(255, 255, 255, 0.05);
    
