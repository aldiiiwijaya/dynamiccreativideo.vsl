/* ============================================
   ENHANCED REVEAL ANIMATIONS
   ============================================ */

.reveal {
    opacity: 0;
    transform: translateY(60px);
    transition: all var(--animation-duration) var(--bezier-smooth);
    will-change: transform, opacity;
}

.reveal.active {
    opacity: 1;
    transform: translateY(0);
}

/* Staggered delays for smoother animations */
.reveal-delay-0 { transition-delay: 0s; }
.reveal-delay-1 { transition-delay: 0.1s; }
.reveal-delay-2 { transition-delay: 0.2s; }
.reveal-delay-3 { transition-delay: 0.3s; }
.reveal-delay-4 { transition-delay: 0.4s; }
.reveal-delay-5 { transition-delay: 0.5s; }

/* Special reveal animations for different elements */
.reveal.slide-up {
    transform: translateY(100px) scale(0.9);
}

.reveal.slide-up.active {
    transform: translateY(0) scale(1);
}

.reveal.fade-scale {
    transform: scale(0.8);
    opacity: 0;
}

.reveal.fade-scale.active {
    transform: scale(1);
    opacity: 1;
}

